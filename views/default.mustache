<html>
<head>
	<script src='/javascripts/jquery.min.js' type='text/javascript'></script>
	<script src='/javascripts/foundation.js' type='text/javascript'></script>
	<script src='/javascripts/app.js' type='text/javascript'></script>
	<script src='/javascripts/modernizr.foundation.js' type='text/javascript'></script>
	<link rel='stylesheet' type='text/css' href='/stylesheets/foundation.css'>
	<link rel='stylesheet' type='text/css' href='/stylesheets/app.css'>

	<title> {{pagetitle}} </title>

</head>
<body>
	{{#reveal}}
	<!-- window reveal for foundation -->
		<div id='modale' class='reveal-modal'>
       			<h1>Title</h1>
       			<p>Text in reveal modal windows</p>
       			<a class='close-reveal-modal'>x</a>
    		</div>
	{{/reveal}}

	{{#header}}
	<div class='container'>

		<div class='row'>
<!-- LEFT COLUMNS -->
			<div class='eight columns'>
			MUCONTENT

			</div>

			<div class='four columns'>
				<ul class='nav-bar'>
					<li class='has-flyout'>
					<a href='#' class='main'>Language Choose</a>
					<a href='#' class='flyout-toggle'><span></span></a>
						<div class='flyout small'>
						{{#languages}}
							<a href='/locales/{{lang_id}}'>{{lang_name}}</a>
						{{/languages}}		
						</div>
					</li>
				</ul>
			</div>
		</div>
	</div>

		<ul class='nav-bar'>
			{{#menu}}
        			<li><a href='{{path}}' class='main'> {{item}} </a></li>
			{{/menu}}

		</ul>
	{{/header}}


	<div class='container'>

		<div class='row'>
<!-- LEFT COLUMNS -->
			<div class='eight columns'>
				<h1>{{pagetitle}}</h1>

<!-- THE MESSAGE -->

			{{#message}}			
				<div class='alert-box {{action}}'>{{message}} <a href'' class='close'>&times;</a></div>
			{{/message}}

<!-- THE DINAMIC CONTENT -->

			{{#content_index}}

			{{/content_index}}

			{{#content_login}}

			{{/content_login}}

			{{#content_registration}}

			{{/content_registration}}

			{{#content_user}}

			{{/content_user}}

			{{#content_module}}

			{{/content_module}}

			{{#content_page}}

			{{/content_page}}

			{{#content_menu}}

			{{/content_menu}}

			{{#content_themes}}

			{{/content_themes}}

			{{#content_language}}

			{{/content_language}}

			{{#content_content}}

			{{/content_content}}

			{{#content_maintenance}}

			{{/content_maintenance}}

			{{#content_domains}}

			{{/content_domains}}

			{{#content_404}}

			{{/content_404}}


<!-- THE FORMS -->
			{{#form}}
				
				{{#form_user}}
					<form method='post' action='/{{type}}' class='nice'>
			    	 		<input type='text' name='name' class='input-text' placeholder='Nome' value='{{name}}'/>
						{{#registration}}
	     					<input type='text' name='email' class='input-text' placeholder='Email' value='{{email}}'/>
						{{/registration}}
						{{#restricted}}
	     					<input type='text' name='role' class='input-text' placeholder='Role' value='{{role}}'/>
						{{/restricted}}
	     					<input type='password' name='password' class='input-text' placeholder='Password'/>
	     					<input type='submit' value='Submit' class='small radius button'/>
					</form>
				{{/form_user}}

				{{#form_page}}
					<form method='post' action='/page' class='nice'>
						<input type='text' name='method' class='input-text' placeholder='Method' value='{{method}}'/>
						<input type='text' name='pathtitle' class='input-text' placeholder='PageTitle' value='{{pathtitle}}'/>
						<input type='text' name='formoption' class='input-text' placeholder='FormOption' value='{{formoption}}'/>
						<input type='text' name='headeroption' class='input-text' placeholder='Header' value='{{headeroption}}'/>
						<input type='text' name='revealoption' class='input-text' placeholder='RevealOption' value='{{revealoption}}'/>
						<input type='text' name='sidebaroption' class='input-text' placeholder='SideBarOption' value='{{sidebaroption}}'/>
						<input type='text' name='footeroption' class='input-text' placeholder='FooterOption' value='{{footeroption}}'/>
						<input type='submit' value='Submit' class='small radius button'/>
					</form>
				{{/form_page}}

				{{#form_menulist}}
					<form method='post' action='/menu' class='nice'>
						<input type='text' name='pathvalue' class='input-text' placeholder='Path' value='{{pathvalue}}'/>
						<input type='text' name='itemvalue' class='input-text' placeholder='Item' value='{{itemvalue}}'/>
						<input type='text' name='position' class='input-text' placeholder='Position' value='{{position}}'/>
						<input type='text' name='acl' class='input-text' placeholder='Acl' value='{{acl}}'/>
						<input type='submit' value='Submit' class='small radius button'/>
					</form>
				{{/form_menulist}}

				{{#form_language}}
					<form method='post' action='/language' class='nice'>
						<input type='text' name='lang_id' class='input-text' placeholder='Language Id' value='{{lang_id}}'/>
						<input type='text' name='lang_name' class='input-text' placeholder='Language Name' value='{{lang_name}}'/>
						<input type='submit' value='Submit' class='small radius button'/>
					</form>
				{{/form_language}}

				{{#form_content}}
					<form method='post' action='/content' class='nice'>
						<input type='hidden' name='operation' value='{{operation}}'/>
						<input type='text' name='type' class='input-text' placeholder='Content Type (message or content)' value='{{type}}'/>
						<input type='text' name='tag' class='input-text' placeholder='Content Tag' value='{{tag}}'/>
						<input type='text' name='lang_id' class='input-text' placeholder='Language Id' value='{{lang_id}}'/>
						<textarea name='text' class='input-text' placeholder='Text'/></textarea>
						<input type='submit' value='Submit' class='small radius button'/>
					</form>
				{{/form_content}}

				{{#form_maintenance}}
					<form method='post' action='/maintenance' class='nice'>
						<input type='checkbox' name='maintenance' value='{{value}}' {{checked}} />
					     	<input type='submit' value='Submit' class='small radius button'/>
					</form>

				{{/form_maintenance}}

				{{#form_themes}}
					<form method='post' action='/themes' class='nice'>
						<textarea name='content' class='expand input-text' rows='100' placeholder='Content' />{{content}}</textarea>
					     	<input type='submit' value='Submit' class='small radius button'/>
					</form>

				{{/form_themes}}

				{{#form_domains}}
					<form method='post' action='/domains' class='nice'>
						<textarea name='content' class='input-text' placeholder='Content' />{{content}}</textarea>
					     	<input type='submit' value='Submit' class='small radius button'/>
					</form>

				{{/form_domains}}


			{{/form}}

			{{#data_user_new}}
				{{#restricted}}
				<a href='/registration'>New User</a><br><br> 
				{{/restricted}}
			{{/data_user_new}}
			{{#data_user}}
				{{name}} -
				{{email}} -
				{{password}}  
				{{#user_edit}}
				<a href='/user/edit/{{name}}'>edit</a>
				{{/user_edit}}
				{{#restricted}}
				<a href='/user/delete/{{name}}'>delete</a><br>
				{{/restricted}}
			{{/data_user}}

			{{#data_page}}
				{{method}} -
				{{pagetitle}} -
				{{form}}  
				<a href='/page/edit/{{method}}'>edit</a><br>
			{{/data_page}}

			{{#data_menulist}}
				{{path}} -
				{{item}} -
				{{position}} -
				{{acl}}  
				<a href='/menu/edit/{{tag}}'>edit</a><br>
			{{/data_menulist}}

			{{#data_themes}}
				{{field}} : {{value}}
			{{/data_themes}}

			{{#data_language_new}}
				<a href='/language/new'>New Language</a><br><br> 
			{{/data_language_new}}
			{{#data_language}}
				{{lang_id}} - 
				{{lang_name}}
				<a href='/language/delete/{{lang_id}}'>delete</a><br>
			{{/data_language}}

			{{#data_content_new}}
				<a href='/content/new'>New content</a><br><br> 
			{{/data_content_new}}
			{{#data_content}}
				{{type}} - 
				{{tag}} - 
				{{lang_id}} - 
				{{text}}
				<a href='/content/edit/{{type}}/{{tag}}/{{lang_id}}'>edit</a> 
				<a href='/content/delete/{{type}}/{{tag}}/{{lang_id}}'>delete</a><br>
			{{/data_content}}

			{{#data_modules}}
				{{value}} - <a href='/{{value}}/install/{{status}}'>{{status}}</a> <br>  
			{{/data_modules}}

			</div>

<!-- RIGHT COLOUMS / SIDEBAR -->
	{{#sidebar}}
			<div class='four columns'>
				<h1>SIDEBAR</h1>

				{{#reveal}}
	    				<a href='#' data-reveal-id='modale'>Click here to see modal windows </a>
				{{/reveal}}
			</div>
		</div>
	{{/sidebar}}
	</div>
	

<!-- FOOTER -->
	{{#footer}}
		<center>FOOTER HERE</center>
	{{/footer}}
</body>
</html>

